<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_eight"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="@string/edit_text_hint"
        android:importantForAutofill="no"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:background="@drawable/edit_text_border"
        android:padding="@dimen/margin_sixteen"
        android:layout_margin="@dimen/padding_eight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/button_one"
                android:text="@string/button_one"
                android:onClick="operationFunction"
                style="@style/button_style" />
            <Button
                android:id="@+id/button_two"
                android:text="@string/button_two"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_three"
                android:text="@string/button_three"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_divide"
                android:text="@string/button_divide"
                android:onClick="operationFunction"
                android:layout_marginRight="@dimen/margin_eight"
                style="@style/button_style"
                android:layout_marginEnd="@dimen/margin_eight"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/button_four"
                android:text="@string/button_four"
                android:onClick="operationFunction"
                style="@style/button_style" />
            <Button
                android:id="@+id/button_five"
                android:text="@string/button_five"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_six"
                android:text="@string/button_six"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_minus"
                android:text="@string/button_minus"
                android:onClick="operationFunction"
                android:layout_marginRight="@dimen/margin_eight"
                style="@style/button_style"
                android:layout_marginEnd="@dimen/margin_eight"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/button_seven"
                android:text="@string/button_seven"
                android:onClick="operationFunction"
                style="@style/button_style" />
            <Button
                android:id="@+id/button_eight"
                android:text="@string/button_eight"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_nine"
                android:text="@string/button_nine"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_plus"
                android:text="@string/button_plus"
                android:onClick="operationFunction"
                android:layout_marginRight="@dimen/margin_eight"
                style="@style/button_style"
                android:layout_marginEnd="@dimen/margin_eight"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/button_discard"
                android:text="@string/button_discard"
                android:onClick="operationFunction"
                style="@style/button_style" />
            <Button
                android:id="@+id/button_zero"
                android:text="@string/button_zero"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_dot"
                android:text="@string/button_dot"
                android:onClick="operationFunction"
                style="@style/button_style"/>
            <Button
                android:id="@+id/button_equal"
                android:text="@string/button_equal"
                android:onClick="operationFunction"
                android:layout_marginRight="@dimen/margin_eight"
                style="@style/button_style"
                android:layout_marginEnd="@dimen/margin_eight"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>